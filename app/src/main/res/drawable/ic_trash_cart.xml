<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="48"
            android:viewportHeight="48">
            <group android:name="headgroup">
                <path
                    android:name="head"
                    android:pathData="M 10.5 11 L 10.5 8 L 17.2 8 L 19.2 6 L 28.8 6 L 30.8 8 L 37.5 8 L 37.5 11 Z"
                    android:fillColor="#000000"
                    android:strokeWidth="1"/>
            </group>
            <group android:name="bodygroup">
                <path
                    android:name="body"
                    android:pathData="M 15 42 Q 13.8 42 12.9 41.1 Q 12 40.2 12 39 L 12 12 L 36 12 L 36 39 Q 36 40.2 35.1 41.1 Q 34.2 42 33 42 Z"
                    android:fillColor="#000"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="headgroup">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="150"
                    android:valueFrom="0"
                    android:valueTo="-10"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
